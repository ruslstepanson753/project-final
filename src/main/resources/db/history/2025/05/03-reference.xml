<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2025-05-13-03-reference" author="stepanov">
        <createTable tableName="REFERENCE">
            <column name="ID" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="REFERENCE_PKEY"/>
            </column>
            <column name="CODE" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="REF_TYPE" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="ENDPOINT" type="TIMESTAMP"/>
            <column name="STARTPOINT" type="TIMESTAMP"/>
            <column name="TITLE" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="AUX" type="VARCHAR"/>
        </createTable>
        <addUniqueConstraint
                tableName="REFERENCE"
                columnNames="REF_TYPE, CODE"
                constraintName="UK_REFERENCE_REF_TYPE_CODE"/>
    </changeSet>
</databaseChangeLog>