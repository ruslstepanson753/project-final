<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2025-05-13-12-attachment" author="stepanov">
        <createTable tableName="ATTACHMENT">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_ATTACHMENT"/>
            </column>
            <column name="NAME" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="FILE_LINK" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="OBJECT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="OBJECT_TYPE" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="DATE_TIME" type="TIMESTAMP"/>
        </createTable>

        <!-- Связь с таблицей USERS -->
        <addForeignKeyConstraint
                baseTableName="ATTACHMENT"
                baseColumnNames="USER_ID"
                referencedTableName="USERS"
                referencedColumnNames="ID"
                constraintName="FK_ATTACHMENT"/>

        <!-- Опционально: можно добавить индекс для часто используемых полей -->
        <createIndex
                tableName="ATTACHMENT"
                indexName="IX_ATTACHMENT_OBJECT">
            <column name="OBJECT_ID"/>
            <column name="OBJECT_TYPE"/>
        </createIndex>

        <createIndex
                tableName="ATTACHMENT"
                indexName="IX_ATTACHMENT_USER">
            <column name="USER_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>