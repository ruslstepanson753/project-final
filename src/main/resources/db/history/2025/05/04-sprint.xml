<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2025-05-13-03-sprint" author="stepanov">
        <createTable tableName="SPRINT">
            <column name="ID" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="SPRINT_PKEY"/>
            </column>
            <column name="STATUS_CODE" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="STARTPOINT" type="TIMESTAMP"/>
            <column name="ENDPOINT" type="TIMESTAMP"/>
            <column name="TITLE" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="PROJECT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="SPRINT"
                baseColumnNames="PROJECT_ID"
                referencedTableName="PROJECT"
                referencedColumnNames="ID"
                constraintName="FK_SPRINT_PROJECT"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>